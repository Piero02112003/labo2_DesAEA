<Window x:Class="labo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Usuario:" />
            <TextBox x:Name="txtUsuario" />
            <Label Content="Contraseña:" />
            <PasswordBox x:Name="txtContraseña" />
            <Button Content="Iniciar Sesión" Click="BtnIniciarSesion_Click" />
            <TextBlock x:Name="lblMensaje" Foreground="Red" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
